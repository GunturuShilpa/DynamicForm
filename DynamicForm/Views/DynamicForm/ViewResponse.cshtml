@model IEnumerable<DynamicForm.Models.UserFormValuesModel>
@using Shared
<div class="x_title">
    <h2 class="modal-header bg-warning">View Response</h2>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table" cellpadding="0" cellspacing="0" style="width:100%;border:1px solid black">
                    <thead>
                        @*<tr>
                        <th style="width:150px">Name</th>
                        <th style="width:150px">Value</th>
                        <th></th>
                        </tr>*@
                    </thead>
                    <tbody>

                        @if (Model.Count() > 0)
                        {                           
                            @foreach (var item in Model)
                            {
                                if (@item.TemplateFormFieldId != 0)
                                {
                                    if (@item.FieldName != "File Upload")
                                    {
                                        <tr>
                                            <td style="color:black;font:bold">@item.FieldName</td>
                                            <td>@item.FieldValue</td>

                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td style="color:black;font:bold">Image</td>
                                            <td>                                            
                                                <img class="rounded-full" src="@item.FieldValue">
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
