    completedForm = function (xhr) {
        debugger
        var rtn = JSON.parse(xhr.responseText);
        if (rtn.error == false) {
            Swal.fire({
                title: 'Template Form',
                text: rtn.message,
                type: 'success',
                allowOutsideClick: false
            }).then(function () {
                $('#add-form-model').hide();
                oTable = $('#datatable-region').DataTable();
                oTable.draw();
            });
            $('#btnFormClose').click();
            clearFormCreate();
        }
        else {
            Swal.fire({
                icon: 'error',
                title: 'Template Form',
                text: 'Oops!! Something Went Wrong!',
                type: 'error',
                allowOutsideClick: false
            });
        }
    };

